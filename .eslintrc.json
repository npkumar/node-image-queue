{
    "env": {
        "browser": false,
        "commonjs": true,
        "es6": true
    },
    "extends": "google",
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018
    },
    "rules": {
        "indent": [2, 2],
        "new-cap": 0,
        "max-len": ["error", { "code": 140 }],
        "prefer-template": "error",
        "prefer-arrow-callback": "error",
        "arrow-parens": ["error", "as-needed"]
    }
}